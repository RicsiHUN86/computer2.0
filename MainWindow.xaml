<Window x:Class="computer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:computer"
        mc:Ignorable="d"
        Title="ComputerShop" Height="600" Width="1000">
    <Grid Background="#FFC8B5B5" Margin="0,4,0,-11">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="299*"/>
            <ColumnDefinition Width="716*"/>
        </Grid.ColumnDefinitions>
        <Menu x:Name="MainMenu" Height="39" Width="348" HorizontalAlignment="Left" VerticalAlignment="Top" Visibility="Collapsed" FontWeight="Bold" Margin="21,65,0,0" Grid.Column="1">
            <MenuItem Header="Számítógépek" Click="computer" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White" Height="40" Width="174">
                <MenuItem.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="Black"/>
                        <GradientStop Color="#FF43C8D2" Offset="1"/>
                    </LinearGradientBrush>
                </MenuItem.Background>
            </MenuItem>
            <MenuItem Header="Oprendszerek" Click="operaciosrendszer" HorizontalAlignment="Center" VerticalAlignment="Center" Width="174" Foreground="#FFF7F7F7" Height="40">
                <MenuItem.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="Black"/>
                        <GradientStop Color="#FF43C8D2" Offset="1"/>
                    </LinearGradientBrush>
                </MenuItem.Background>
            </MenuItem>
        </Menu>
        <DataGrid Name="data" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="79,146,99,229" BorderBrush="Black" Visibility="Collapsed" Foreground="#FFF51111" Grid.ColumnSpan="2">
            <DataGrid.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black"/>
                    <GradientStop Color="#FFD2BCBC" Offset="1"/>
                </LinearGradientBrush>
            </DataGrid.Background>
        </DataGrid>

        <TextBlock HorizontalAlignment="Center" Height="15" Margin="0,280,0,0" TextWrapping="Wrap" x:Name="username" VerticalAlignment="Top" Width="0"/>
        <TextBox HorizontalAlignment="Left" Margin="265,222,0,0" Name="username_txt" VerticalAlignment="Top" Width="150" Height="25" Grid.ColumnSpan="2" />
        <PasswordBox HorizontalAlignment="Left" Margin="265,273,0,0" Name="passwordBox" VerticalAlignment="Top" Width="150" Height="25" Grid.ColumnSpan="2"/>
        <Button x:Name="Login_Button" Content="Bejelentkezés" HorizontalAlignment="Left"  Margin="265,304,0,0" VerticalAlignment="Top" Width="150" Height="25" Click="Login_Click" Grid.ColumnSpan="2"/>
        <Label x:Name="Login_Label" Content="Bejelentkezés:" HorizontalAlignment="Left" Margin="265,163,0,0" VerticalAlignment="Top" Width="150" Height="30" RenderTransformOrigin="0.488,0.541" Grid.ColumnSpan="2" Background="#FF9AEDE0"/>

        <Button Content="Kilépés" Margin="473,511,84,35" Grid.Column="1" Click="kilepes_Click" Width="150" Height="25"/>

        <PasswordBox x:Name="Reg_Pass1" HorizontalAlignment="Left" Margin="204,271,0,0" VerticalAlignment="Top" Width="150" Height="25" Grid.Column="1"/>
        <PasswordBox x:Name="Reg_Pass2" HorizontalAlignment="Left" Margin="205,316,0,0" VerticalAlignment="Top" Width="150" Height="26" Grid.Column="1"/>
        <Label x:Name="Reg_Label" Content="Regisztráció:" HorizontalAlignment="Left" Margin="205,163,0,0" VerticalAlignment="Top" Grid.Column="1" Width="150" Height="30" Background="#FF9AEDE0"/>
        <Button x:Name="Reg_Button" Content="Regisztráció" HorizontalAlignment="Left" Margin="205,357,0,0" VerticalAlignment="Top" Width="150" Height="25" Click="Reg_Click" Grid.Column="1"/>
        <TextBox x:Name="Reg_User" Margin="205,224,350,0" TextWrapping="Wrap" VerticalAlignment="Top" RenderTransformOrigin="0.5,0.5" Width="150" Height="24" Grid.Column="1"/>
        <Label x:Name="Reg_UserL" Grid.Column="1" Content="Felhasználónév:" HorizontalAlignment="Left" Margin="205,198,0,0" VerticalAlignment="Top"/>
        <Label x:Name="Reg_Jelszo1L" Grid.Column="1" Content="Jelszó:" HorizontalAlignment="Left" Margin="204,247,0,0" VerticalAlignment="Top"/>
        <Label x:Name="Reg_Jelszo2L" Grid.Column="1" Content="Jelszó újra:" HorizontalAlignment="Left" Margin="204,296,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.406,0.618"/>
        <Label x:Name="login_UserL" Content="Felhasználónév:" HorizontalAlignment="Left" Margin="265,196,0,0" VerticalAlignment="Top" Grid.ColumnSpan="2"/>
        <Label x:Name="Login_jelszoL" Content="Jelszó:" HorizontalAlignment="Left" Margin="265,247,0,0" VerticalAlignment="Top" Grid.ColumnSpan="2"/>

    </Grid>
</Window>
